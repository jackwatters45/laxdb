{
  "name": "laxdb",
  "version": "0.0.0",
  "private": true,
  "description": "Lax DB is a suite of tools made with lacrosse in mind",
  "workspaces": [
    "packages/*"
  ],
  "type": "module",
  "scripts": {
    "build": "turbo build",
    "deploy": "bun --env-file=.env alchemy deploy",
    "destroy": "bun --env-file=.env alchemy destroy",
    "dev": "bun --env-file=.env alchemy dev",
    "typecheck": "turbo typecheck",
    "format": "oxfmt ",
    "format:check": "bun run format -- --check",
    "fix": "oxlint --fix && oxfmt",
    "prepare": "effect-language-service patch",
    "postinstall": "vibe-rules install codex"
  },
  "dependencies": {
    "effect": "^3.19.13"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20251221.0",
    "@cloudflare/vitest-pool-workers": "^0.8.19",
    "@effect/language-service": "^0.62.4",
    "@effect/vitest": "^0.27.0",
    "@tsconfig/bun": "^1.0.10",
    "@types/bun": "latest",
    "@types/node": "^24.10.4",
    "alchemy": "latest",
    "lefthook": "^2.0.12",
    "miniflare": "^4.20251217.0",
    "oxfmt": "^0.19.0",
    "oxlint": "^1.34.0",
    "oxlint-tsgolint": "^0.10.0",
    "turbo": "^2.7.1",
    "typescript": "^5.9.3",
    "vibe-rules": "^0.3.91",
    "vitest": "latest"
  },
  "packageManager": "bun@1.3.0"
}
