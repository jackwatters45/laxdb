{
  "name": "@laxdb/pipeline",
  "private": true,
  "type": "module",
  "exports": {
    "./*": "./src/*.ts"
  },
  "scripts": {
    "test": "vitest",
    "test:unit": "vitest run --exclude='**/*.integration.test.ts'",
    "test:coverage": "vitest run --coverage --exclude='**/*.integration.test.ts'",
    "typecheck": "tsgo --noEmit",
    "lint": "oxlint --type-aware --fix",
    "format": "oxfmt",
    "fix": "bun run lint && bun run format"
  },
  "dependencies": {
    "@effect/platform": "^0.94.0",
    "cheerio": "^1.1.2"
  },
  "devDependencies": {
    "@types/pg": "^8.16.0",
    "@types/ws": "^8.18.1",
    "drizzle-kit": "^0.31.8",
    "fetchdts": "^0.1.7",
    "tsx": "^4.21.0"
  },
  "effect": {
    "generateExports": {
      "include": [
        "**/*.ts"
      ]
    },
    "generateIndex": {
      "include": [
        "**/*.ts"
      ]
    }
  }
}
