{
  "name": "@laxdb/core",
  "private": true,
  "type": "module",
  "exports": {
    "./*": "./src/*.ts"
  },
  "scripts": {
    "db": "drizzle-kit",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:studio": "drizzle-kit studio",
    "better-auth:gen": "npx @better-auth/cli@latest generate",
    "typecheck": "tsgo --noEmit",
    "lint": "oxlint --type-aware --fix",
    "format": "oxfmt",
    "fix": "bun run lint && bun run format"
  },
  "dependencies": {
    "@aws-sdk/client-sesv2": "^3.972.0",
    "@effect/experimental": "^0.58.0",
    "@effect/platform": "0.94.1",
    "@effect/platform-bun": "^0.87.0",
    "@effect/rpc": "^0.73.0",
    "@effect/sql": "^0.49.0",
    "@effect/sql-drizzle": "^0.48.0",
    "@effect/sql-pg": "^0.50.1",
    "@polar-sh/better-auth": "^1.6.4",
    "@polar-sh/sdk": "^0.42.2",
    "better-auth": "^1.4.17",
    "drizzle-orm": "^1.0.0-beta.9-e89174b",
    "effect": "^3.19.14",
    "nanoid": "^5.1.6",
    "pg": "^8.17.2",
    "zod": "^4.3.5"
  },
  "devDependencies": {
    "@effect/build-utils": "^0.8.9",
    "@types/pg": "^8.16.0",
    "@types/ws": "^8.18.1",
    "drizzle-kit": "^1.0.0-beta.9-e89174b",
    "fetchdts": "^0.1.7",
    "tsx": "^4.21.0"
  },
  "effect": {
    "generateExports": {
      "include": [
        "**/*.ts"
      ]
    },
    "generateIndex": {
      "include": [
        "**/*.ts"
      ]
    }
  }
}
