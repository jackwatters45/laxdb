# ===========================================
# Alchemy / Cloudflare Infrastructure
# ===========================================

# Required: Password for encrypting secrets in Alchemy state
ALCHEMY_PASSWORD=

# Required: Token for Alchemy state store (Cloudflare KV)
ALCHEMY_STATE_TOKEN=

# Required: Cloudflare API credentials
CLOUDFLARE_API_TOKEN=
CLOUDFLARE_ACCOUNT_ID=
CLOUDFLARE_EMAIL=

# ===========================================
# Authentication (Google OAuth)
# ===========================================

# Required: Google OAuth credentials
# Get from: https://console.cloud.google.com/apis/credentials
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# Required: Better Auth session secret
# Generate: openssl rand -base64 32
BETTER_AUTH_SECRET=

# ===========================================
# Payments (Polar)
# ===========================================

# Required: Polar webhook secret for payment events
# Get from: https://polar.sh/dashboard
POLAR_WEBHOOK_SECRET=

# ===========================================
# Email (AWS SES)
# ===========================================

# Optional: AWS credentials for SES email sending
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-west-2

# Optional: Email sender configuration
EMAIL_SENDER=noreply@laxdb.io
SUPPORT_EMAIL=support@laxdb.io

# ===========================================
# Application URLs
# ===========================================

# Optional: Override app URL (defaults to http://localhost:3000 in dev)
APP_URL=http://localhost:3000

# ===========================================
# CI/CD (set automatically by GitHub Actions)
# ===========================================

# PULL_REQUEST=
# GITHUB_SHA=
# GITHUB_TOKEN=
